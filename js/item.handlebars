{{#each rows}}
    <div class="row">
        {{#each this}}
            <div class={{col ../../colSize}}>
                <h2 class="text-center">{{this.title}}</h2>

                {{#ifImage this.image ../../platform}}
                    <a href="{{link @key ../../../platform this}}">
                        <img class="img-responsive center-block"
                             style="width: {{size ../../../platform}}px; height: auto;"
                             src={{img @key ../../../platform}} alt={{this.title}}>
                    </a>
                {{/ifImage}}

                {{#ifShort this.description}}
                    <p class="lead text-center">{{this.description}}</p>
                {{else}}
                    <p class="lead text-justify">{{this.description}}</p>
                {{/ifShort}}

                <p class="text-center">
                    <a class="btn btn-primary" href={{link @key ../../platform this}} role="button">
                        {{go ../../platform}}
                    </a>
                </p>
            </div>
        {{/each}}
    </div>
{{/each}}
